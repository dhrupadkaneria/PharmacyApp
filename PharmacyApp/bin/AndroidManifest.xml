<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pesit.pharmacyapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pesit.pharmacyapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pesit.pharmacyapp.AvailableProducts"
            android:label="@string/title_activity_available_products" >
        </activity>
        <activity
            android:name="com.pesit.pharmacyapp.OutOfStock"
            android:label="@string/title_activity_out_of_stock" >
        </activity>
        <activity
            android:name="com.pesit.pharmacyapp.OrderedProducts"
            android:label="@string/title_activity_ordered_products" >
        </activity>
        <activity
            android:name="com.pesit.pharmacyapp.AddProducts"
            android:label="@string/title_activity_add_products" >
        </activity>
        <activity
            android:name="com.pesit.pharmacyapp.Products"
            android:label="@string/title_activity_products" >
        </activity>
    </application>

</manifest>
